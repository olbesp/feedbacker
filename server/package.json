{
  "name": "server",
  "version": "0.0.1",
  "description": "feedbacker-app server",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "dev": "nodemon dist/index.js",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && pretty-quick --staged && npm run coverage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olbesp/feedbacker.git"
  },
  "author": "Oleksii Bespalko <ol.bespalko@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/olbesp/feedbacker/issues"
  },
  "homepage": "https://github.com/olbesp/feedbacker#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "prettier": "1.17.0",
    "pretty-quick": "^1.10.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "@types/express": "^4.16.1",
    "express": "^4.16.4"
  }
}
